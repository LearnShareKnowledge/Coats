<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme"
    tools:context="com.learnshare.coats.screens.ConfirmActivity">

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:id="@+id/ivJacket"/>

    <TextView
        android:typeface="serif"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvName"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/text"
        android:layout_below="@id/ivJacket"
        android:layout_marginTop="20dp"/>

    <TextView
        android:typeface="serif"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvPhone"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/text"
        android:layout_below="@id/tvName"
        android:layout_marginTop="10dp"/>


    <TextView
        android:typeface="serif"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvEmail"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/text"
        android:layout_below="@id/tvPhone"
        android:layout_marginTop="10dp"/>


    <TextView
        android:typeface="serif"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvID"
        android:textSize="40dp"
        android:text="ID : 207"
        android:gravity="center"
        android:textColor="@color/text"
        android:layout_below="@id/tvEmail"
        android:layout_marginTop="20dp"/>


    <TextView
        android:typeface="serif"
        android:textSize="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvUniqueCode"
        android:text="NL-EIND-OS-2017"
        android:gravity="center"
        android:textColor="@color/text"
        android:layout_below="@id/tvID"
        android:layout_marginTop="10dp"/>

    <Button
        android:typeface="serif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvUniqueCode"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/text"
        android:id="@+id/btnConfirm"
        android:text="@string/confirm"/>
</RelativeLayout>
